{
  "dashboard": {
    "id": null,
    "title": "Hexagonal API Dashboard",
    "description": "Complete monitoring dashboard for Hexagonal Architecture API",
    "tags": ["hexagonal", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Total",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {
            "label": "seconds",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Requests by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (status_code)",
            "legendFormat": "{{status_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "requests/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 4,
        "title": "HTTP Requests by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "label": "requests/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 5,
        "title": "User Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(user_operations_total[5m])) by (operation, status)",
            "legendFormat": "{{operation}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {
            "label": "operations/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 6,
        "title": "Authentication Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(auth_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {
            "label": "attempts/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(db_operations_total[5m])) by (operation, table, status)",
            "legendFormat": "{{operation}} {{table}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "yAxes": [
          {
            "label": "operations/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "RabbitMQ Messages",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(messages_published_total[5m])) by (queue)",
            "legendFormat": "Published: {{queue}}"
          },
          {
            "expr": "sum(rate(messages_consumed_total[5m])) by (queue)",
            "legendFormat": "Consumed: {{queue}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "label": "messages/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 32},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 10,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users_total",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 32},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        }
      },
      {
        "id": 11,
        "title": "Application Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(application_errors_total[5m])) by (error_type, component)",
            "legendFormat": "{{error_type}} - {{component}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "yAxes": [
          {
            "label": "errors/sec",
            "min": 0
          },
          {
            "show": false
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "5s",
    "schemaVersion": 16,
    "version": 1
  }
} 